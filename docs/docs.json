{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "Llumen",
  "colors": {
    "primary": "#EF7722",
    "light": "#FF8A3D",
    "dark": "#D96815"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Overview",
            "pages": ["index", "features/overview"]
          },
          {
            "group": "Features",
            "pages": [
              "features/chat-modes",
              "features/rich-media",
              "features/themes",
              "features/performance"
            ]
          }
        ]
      },
      {
        "tab": "User Guide",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "user-guide/installation",
              "user-guide/configuration",
              "user-guide/model-config",
              "user-guide/first-steps"
            ]
          },
          {
            "group": "Usage",
            "pages": [
              "user-guide/chat-basics",
              "user-guide/search-mode",
              "user-guide/research-mode",
              "user-guide/media-upload"
            ]
          },
          {
            "group": "Advanced",
            "pages": [
              "user-guide/api-providers",
              "user-guide/docker-compose",
              "user-guide/troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "Developer Docs",
        "groups": [
          {
            "group": "Development",
            "pages": [
              "developer/architecture",
              "developer/building",
              "developer/contributing"
            ]
          },
          {
            "group": "Technical Details",
            "pages": [
              "developer/backend",
              "developer/frontend",
              "developer/deployment"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/pinkfuwa/llumen",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://github.com/pinkfuwa/llumen/discussions",
          "icon": "comments"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Download",
        "href": "https://github.com/pinkfuwa/llumen/releases"
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "cursor"]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/pinkfuwa/llumen"
    }
  }
}
